function cheat {
    echo '--------------------------------------------------------------------'
    echo 'CHEAT SHEET '
    echo '--------------------------------------------------------------------'
    echo "G : grep - takes an arg <search term>"
    echo 'H : head - top    <amount> of what ever is piped'
    echo 'T : tail - bottom <amount> of what ever is piped'
    echo 'C : count - '
    echo 'L : less - pager'
    echo 'N : dev/null - send unwanted output to it.'
    echo 'A : awk '
    echo '--------------------------------------------------------------------'
    echo 'Functions'
    echo '--------------------------------------------------------------------'
    echo 'f :       recursive text search searches all files in dir <search term>'
    echo 'du :      calculate total disc usage for a folder'
    echo 'wordy :   sort files in current dir by the number of words they contain'
    echo 'dup :     takes two args: files to compare, returns all duplicates'
    echo 'ndup :    takes two args: files to compare, returns all none duplicates'
    echo '--------------------------------------------------------------------'
    echo 'Processes'
    echo '--------------------------------------------------------------------'
    echo 'any :     takes an arg - the process you are looking for'
    echo 'pka :     takes an arg - a process name and kills all occurrences'
    echo 'pkaj :    kills all jobs list'
    echo 'jn :      takes an arg - the number of the job to reopen'
    echo '--------------------------------------------------------------------'
    echo 'Aliases'
    echo '--------------------------------------------------------------------'
    echo 'reload:   reload the shell'
    echo 'vr:       nvim resource'
    echo 'za:       zsh aliases'
    echo 'ze:       zsh enviroment variables'
    echo '--------------------------------------------------------------------'
    echo 'System'
    echo '--------------------------------------------------------------------'
    echo lock':     lock the screen'
    echo reboot':   reboot the system'
    echo shutdown': shutdown the system'
}
